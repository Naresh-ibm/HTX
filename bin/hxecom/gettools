$SERVER = $ARGV[0];

if(!$SERVER) {
	$SERVER = "iofnim.austin.ibm.com";
}
#see if the SERVER is up..
$res = `ping -c1 -w1 $SERVER`;
if($res =~ /100%/) {
	if($SERVER !~ /austin/) {
		$SERVER = "$SERVER" . ".austin.ibm.com";
		$res = `ping -c1 -w1 $SERVER`;
		if($res =~ /100%/) {
		} else {
			print("$SERVER is NOT up.. You may have to put $SERVER in /etc/hosts file\n");
			print("You may also need to try another server.. try toro or bu51b\n");
			print("Just give the new server as input parm ex: gettools bu51b\n");
			exit(1);
		}
	} else {
		print("$SERVER is NOT up.. You may have to put $SERVER in /etc/hosts file\n");
		print("You may also need to try another server.. try toro or bu51b\n");
		print("Just give the new server as input parm ex: gettools bu51b\n");
		exit(1);
	}
}
$res = `mkdir -p /test >/dev/null 2>&1`;
$res = `umount /test > /dev/null 2>&1`;

$res = `mount $SERVER:/nim/build_net /test`;

print("You are now have acess to the tools on $SERVER\nThey are in your /test/tools directory and the /test/tools dir is in your PATH.\n");

