#!/usr/bin/perl
# @(#)72	1.2  src/htx/usr/lpp/htx/bin/hxecom/ecg_net, exer_com, htxubuntu 5/24/04 10:14:01
#########################################################################

$mdtname = $ARGV[0];

$mdtdir = $ENV{"HTXMDT"};
$ecgdir = $ENV{"HTXECG"};

if($mdtname eq "") {
	chdir("$mdtdir");
	@res = `ls`;
	$line = "";
	foreach $name (@res) {
		chop($name);
		if($name !~ /mdt_net/ && $name !~ /net.mdt/) {
			$line = "$line " . "$name";
		}
	}
	if(-e "$ecgdir") {
		chdir("$ecgdir");
		@res = `ls`;
		foreach $name (@res) {
			chop($name);
			if($name !~ /ecg_net/ && $name !~ /net.ecg/) {
				$line = "$line " . "$name";
			}
		}
	}
	while(1) {
		print("Which mdt or ecg file should I add net.mdt or net.ecg to?\n$line\n>>");
		$mdtname=<STDIN>;
		chop($mdtname);
		if($line !~ /$mdtname/ || $mdtname eq "") {
			print("Bad mdt file name, try again!\n");
			next;
		}
		if($mdtname =~ /ecg/) {
			$mdtfile = $ecgdir . "/$mdtname";
		} else {
			$mdtfile = $mdtdir . "/$mdtname";
		}
		last;
	}
} else {  
	if($mdtname =~ /ecg/) {
		$mdtfile = $ecgdir . "/$mdtname";
	} else {
		$mdtfile = $mdtdir . "/$mdtname";
	}
}

#read in the net.mdt file
if($mdtname =~ /ecg/) {
	$netfile = $ecgdir . "/net.ecg";
	$tmpfile = $ecgdir . "/net.tmp";
} else {
	$netfile = $mdtdir . "/net.mdt";
	$tmpfile = $mdtdir . "/net.tmp";
}

unless (open (MDT_NET,"$netfile")) {
	die ("Can't open $netfile file!\n");
}
@netlines = <MDT_NET>;
close(MDT_NET);

$devcount=0;
@devs="";

foreach $line (@netlines) {
	if($line !~ /default:/ && $line =~ /:$/) {
		$devs[$devcount]=$line;	
		++$devcount;
	}
}

if(!$devcount) {
	exit(0);
}

print("Adding $devcount devices to mdt\n");


#read in the mdtfile
print("Open $mdtfile to insert the new lines\n");
unless (open (MDT_FILE,"$mdtfile")) {
	die ("Can't open $mdtfile file!\n");
}
unless (open (TMP_FILE,">$tmpfile")) {
	die ("Can't open $tmpfile file!\n");
}

$line = <MDT_FILE>;
while($line ne "") {
    if($line =~ /\d{1,3}:$/) {
		$match="";
		foreach $dev (@devs) {
			if($dev && $dev ne " ") {
			    if($line =~ /$dev/) {
				    $match="y";
				    last;
			    }
			}
		}
		if($match) {
REDO:
			$line = <MDT_FILE>;
			while($line !~ /:$/ && $line ne "") {
				$line = <MDT_FILE>;
			}
			$match1="";
			foreach $dev (@devs) {
				if($line =~ /$dev/) {
					$match1="y";
					last;
				}
			}
			if($match1) {
				goto REDO;
			} else {
				print TMP_FILE ("$line");
			}
		} else {
			print TMP_FILE ("$line");
		}
	} else {
		print TMP_FILE ("$line");
	}       
	$line = <MDT_FILE>;
}
close(MDT_FILE);

# now add in the network stanzas
$gotone="";
foreach $line (@netlines) {
	if($line !~ /default:$/ && $line =~ /:$/) {
		$gotone="y";
		print TMP_FILE ("$line");
	} elsif($gotone) {
		print TMP_FILE ("$line");
	}
}

close(TMP_FILE);

$res = `cp $tmpfile $mdtfile`;
$res = `rm $tmpfile`;
print("Done OK\n");


exit(0);
