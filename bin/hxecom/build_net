#!/bin/bash


#
# @(#)63  1.79  src/htx/usr/lpp/htx/bin/hxecom/build_net, exer_com, htxubuntu 12/16/15 00:47:28
#

########################################################################
#                                                                      # 
# build_net script is a wrapper which invokes htx_env.sh script to set #
# HTX environment variables and finally invokes build_net_config       #
# script to configure interfaces.                                      #
#                                                                      #
########################################################################

if [[ -z ${HTX_HOME_DIR} ]];
then
    HTX_HOME_DIR=`cat /var/log/htx_install_path 2> /dev/null`;

    if [[ -f ${HTX_HOME_DIR}/etc/scripts/htx_env.sh ]];
    then
        . ${HTX_HOME_DIR}/etc/scripts/htx_env.sh;
    else
        echo "htx_env.sh could not be found at ${HTX_HOME_DIR}/etc/scripts/"
        echo "Please make sure HTX is installed and installation path is"
        echo "updated in /var/log/htx_install_path. Exiting"
        exit 1
    fi
fi

/usr/bin/build_net_config $1 $2 $3 $4


