# Print the memory configure
${HTXBIN}/hxefabricbus  /dev/ablink OTH ${HTXREGRULES}/hxefabricbus/default.ab query_memconf >/dev/null 2>&1

proc_ver=`${HTXBIN}/show_syscfg pvr | grep Version | awk -F: '{print $2}'`
proc_ver_dec=`printf %d $proc_ver`
P6Compatmode=`${HTXBIN}/show_syscfg pvr | grep -i Power6Compatmode | awk -F: '{print $2}'|sed -e 's/^ *//' `

echo "Creating mdt.ab_mem ..."
if [[ $proc_ver_dec -ge 63 && $P6Compatmode = "False" ]] # Shifts for P7 & above
then
    create_my_mdt mem:default.mfg 							> ${HTXMDT}/mdt.ab_mem
else
    cat ${HTXMDT}/mdt.mem  							> ${HTXMDT}/mdt.ab_mem
fi

echo 											>> ${HTXMDT}/mdt.ab_mem
echo 'ablink:'										>> ${HTXMDT}/mdt.ab_mem
echo -e '\tHE_name = "hxefabricbus"                	'				>> ${HTXMDT}/mdt.ab_mem
echo -e '\tadapt_desc = "Node to Node"            	'				>> ${HTXMDT}/mdt.ab_mem
echo -e '\tdevice_desc = "Memory BW"              	'				>> ${HTXMDT}/mdt.ab_mem
echo -e '\treg_rules = "hxefabricbus/default.ab"        '                          	>> ${HTXMDT}/mdt.ab_mem
echo -e '\temc_rules = "hxefabricbus/default.ab"        '                          	>> ${HTXMDT}/mdt.ab_mem
echo -e '\tcont_on_err = "NO" 	'						   	>> ${HTXMDT}/mdt.ab_mem 	
echo 											>> ${HTXMDT}/mdt.ab_mem
ln -sf ${HTXMDT}/mdt.ab_mem ${HTXECG}/ecg.ab_mem
